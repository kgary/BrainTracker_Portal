<div class="container-fluid">
    <br>
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li class="active">
            Trial: {{ trial.Name }}
        </li>
    </ol>
    <div class="row">
        <div class="col-sm-12 col-md-5 col-lg-6 col-xl-6">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title text-center">
                        {{ trial.Name }} Trial
                    </h4>
                    <p class="card-text">
                        {{ trial.Description }}
                    </p>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row">
                                    IRB ID
                                </th>
                                <td>
                                    {{ trial.IRBID }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    IRB Start Date
                                </th>
                                <td>
                                    {{ trial.start }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    IRB End Date
                                </th>
                                <td>
                                    {{ trial.end }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    Patient Count
                                </th>
                                <td>
                                    {{ patientCount }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    Noncompliant Count
                                </th>
                                <td>
                                    {{ complianceCount.[0] }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-7 col-lg-6 col-xl-6">
            <div class="card">
                <canvas id="trialChart" height="107px" width="200"></canvas>
            </div>
        </div>
    </div>

    <!-- Patients Listing Row -->
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="card-header white-background">
                    <h5>
                        Patients

                        <span class="pull-right">
                            <a href="/trial/{{trial.TrialId}}/enroll-patient" class="btn btn-sm btn-primary">Enroll New Patient</a>
                        </span>

                    </h5>
                </div>
                <div class="card-block">
                    <table id="patients-table" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Patient Pin</th>
                                <th>Trial Status</th>
                                <th>Compliance Status</th>
                                <th>Start</th>
                                <th>End</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#unless patients.length}}
                                <tr>
                                    <td colspan="5">
                                        <div class="card card-inverse card-info text-center card-block">
                                            <div class="card-title">
                                                No Patients
                                            </div>
                                            <div class="card-text">
                                                Please add some patients to this trial.
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {{/unless}}
                            {{#each patients}}
                                <tr class="table-{{ statusType }}">
                                    <td>
                                        <a href="/patient/tasks/{{ PatientPin }}">
                                            {{ PatientPin }}
                                            <i class="fa fa-search"></i>
                                        </a>
                                    </td>
                                    <td>{{ trialStatus }}</td>
                                    <td>{{ status }}</td>
                                    <td>{{ DateStarted }}</td>
                                    <td>{{ DateCompleted }}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

</div>

{{> add-patient}}

<script>
    window.data = JSON.parse('{{{ graphData }}}');
</script>
<script src="/static/script/trial.js" defer></script>
